---
import { Button } from "@/components/ui/button";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portafolio Víctor MGC</title>
    <ClientRouter />
  </head>
  <body>
    <slot />
    <div class="flex h-16 items-center justify-center border-t">
      © 2025 Víctor MGC — Construido con Astro, React y Tailwindcss
      <Button variant={"link"} className="hover:cursor-pointer">
        <a target="_blank" href="https://www.linkedin.com/in/victormgc/"
          >LinkedIn</a
        >
      </Button>
      |
      <Button variant={"link"} className="hover:cursor-pointer">
        <a target="_blank" href="https://github.com/VictorMGCYT/">GitHub</a>
      </Button>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
