---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";

const languages = [
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg",
    alt: "JavaScript",
    text: "JavaScript",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/typescript/typescript-original.svg",
    alt: "TypeScript",
    text: "TypeScript",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/csharp/csharp-original.svg",
    alt: "C#",
    text: "C#",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/html5/html5-original.svg",
    alt: "HTML5",
    text: "HTML5",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/css3/css3-original.svg",
    alt: "CSS3",
    text: "CSS3",
  },
];

const frameworks = [
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg",
    alt: "React",
    text: "React",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nestjs/nestjs-original.svg",
    alt: "NestJS",
    text: "NestJS",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/express/express-original.svg",
    alt: "Express",
    text: "Express",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/bootstrap/bootstrap-original.svg",
    alt: "Bootstrap",
    text: "Bootstrap",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/tailwindcss/tailwindcss-original.svg",
    alt: "TailwindCSS",
    text: "TailwindCSS",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/expo/expo-original.svg",
    alt: "Expo",
    text: "React Native (Expo)",
  },
  {
    src: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/jest/jest-plain.svg",
    alt: "Jest",
    text: "Jest",
  },
];
---

<div class="rounded-2xl bg-neutral-300/50 py-8">
  <CardHeader>
    <CardTitle className="text-center text-2xl"
      >Tecnologías principales</CardTitle
    >
    <CardDescription className="text-center text-xl"
      >Lenguajes de programación</CardDescription
    >
    <CardContent className="text-center">
      <div class="flex w-full flex-wrap justify-center gap-6">
        {
          languages.map((img) => (
            <Card className="w-full md:w-[calc(25%-24px)] transition-transform duration-300 hover:-translate-y-2.5">
              <CardContent className="flex flex-col items-center font-semibold gap-2">
                <img class="h-30 w-30" src={img.src} alt={img.alt} />
                {img.text}
              </CardContent>
            </Card>
          ))
        }
      </div>
    </CardContent>
    <CardDescription className="mt-6 text-center text-xl"
      >Frameworks y librerías</CardDescription
    >
    <CardContent className="text-center">
      <div class="flex w-full flex-wrap justify-center gap-6">
        {
          frameworks.map((img) => (
            <Card className="w-full md:w-[calc(25%-24px)] transition-transform duration-300 hover:-translate-y-2.5">
              <CardContent className="flex flex-col items-center font-semibold gap-2">
                <img class="h-30 w-30" src={img.src} alt={img.alt} />
                {img.text}
              </CardContent>
            </Card>
          ))
        }
      </div>
    </CardContent>
  </CardHeader>
</div>
